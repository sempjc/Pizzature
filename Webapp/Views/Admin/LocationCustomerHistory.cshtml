@{
    Layout = "_Admin";
    @using Webapp.UI.Models;
    @model LocationCustomerList
}

<h2 class="sub-header">Customer List</h2>
<label>Search Customer</label>
<form asp-controller="Admin" asp-action="LocationCustomerHistory" method="post">
    <laber asp-for="SearchCustome">Search Customer By Name</laber>
    <input asp-for="SearchCustome" type="text"/>
    <div style=" width: 15%">
        <button class="btn btn-md btn-primary btn-block" type="submit">Search Customer</button>
    </div>
</form>
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model.CustomerList)
            {
            <tr>
            <td> @customer.FirstName </td>
            <td> @customer.LastName</td>
            <td> @customer.Email</td>
            </tr>
}
        </tbody>
    </table>
</div>