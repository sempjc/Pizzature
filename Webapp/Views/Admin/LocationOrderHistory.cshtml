@{
    Layout = "_Admin";
    @using Webapp.UI.Models;
    @model LocationOrderList
}

<h2 class="sub-header">Order History</h2>
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Customer Name</th>
                <th>Order Sales</th>
                <th>Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.List)
            {

                var customer = @Model.CustomerList.First(o => o.Id == @order.CustomerId); <tr>
            <td> @customer.FirstName @customer.LastName</td>
            <td> @order.Sale</td>
            <td> @order.Date </td>
        </tr>
}
        </tbody>
    </table>
</div>